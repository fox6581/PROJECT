dProducts = computed(() => {\r\n    return selectedCategory.value\r\n      ? products.value.filter(product => product.category === selectedCategory.value.name)\r\n      : products.value;\r\n  });\r\n  \r\n  // Выбираем категорию\r\n \r\n  </script>\r\n  \r\n  <style scoped>\r\n  .category-menu {\r\n    margin-bottom: 20px;\r\n  }\r\n  \r\n  .category-menu ul {\r\n    list-style-type: none;\r\n    padding: 0;\r\n  }\r\n  \r\n  .category-menu li {\r\n    cursor: pointer;\r\n    padding: 5px;\r\n    background-color: #f0f0f0;\r\n    margin: 5px 0;\r\n  }\r\n  \r\n  .category-menu li:hover {\r\n    background-color: #e0e0e0;\r\n  }\r\n  \r\n  .product-list .product {\r\n    margin-bottom: 20px;\r\n  }\r\n  \r\n  .product-list ul {\r\n    list-style-type: none;\r\n    padding: 0;\r\n  }\r\n  </style>\r\n  "],"mappings":";;EAEWA,KAAK,EAAC;AAAe;;EAIrBA,KAAK,EAAC;AAAc;;uBAJzBC,mBAAA,CAcI,OAdJC,UAcI,G,0BAbFC,mBAAA,CAAkB,YAAd,WAAS,sBAGfA,mBAAA,CASM,OATNC,UASM,I,kBARJH,mBAAA,CAOMI,SAAA,QAddC,WAAA,CAO+BC,MAAA,CAAAC,gBAAgB,EAA3BC,OAAO;yBAAnBR,mBAAA,CAOM;MAPoCS,GAAG,EAAED,OAAO,CAACE,EAAE;MAAEX,KAAK,EAAC;QAC/DG,mBAAA,CAA2B,YAAAS,gBAAA,CAApBH,OAAO,CAACI,IAAI,kBACnBV,mBAAA,CAIK,c,kBAHHF,mBAAA,CAEKI,SAAA,QAZjBC,WAAA,CAUkDG,OAAO,CAACK,eAAe,EAVzE,CAUwBC,cAAc,EAAEC,KAAK;2BAAjCf,mBAAA,CAEK;QAF2DS,GAAG,EAAEM;MAAK,GAAAJ,gBAAA,CACrEG,cAAc,CAACA,cAAc,IAAG,IAAE,GAAAH,gBAAA,CAAGG,cAAc,CAACE,KAAK","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}