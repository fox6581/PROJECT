onse.json();\r\n      products.value = data;\r\n    } catch (error) {\r\n      console.error('Ошибка:', error);\r\n    }\r\n  };\r\n  \r\n  onMounted(fetchProducts);\r\n  </script>\r\n  \r\n  <style scoped>\r\n\r\ndiv{\r\n    padding: 60px 0;\r\n     h2{\r\n      \r\n      font-family: ABeeZee;\r\n      font-size: 24px;\r\n      font-style: italic;\r\n      font-weight: 400;\r\n      line-height: 32px;\r\n      text-align: center;\r\n  \r\n  }  \r\n}\r\n   @media(width<780px){\r\n    .conteiner\r\n   }\r\n\r\n  </style>\r\n  "],"mappings":";;uBACIA,mBAAA,CAMM,c,0BALJC,mBAAA,CAA6B,YAAzB,sBAAoB,sBAEnBC,YAAA,CAA+DC,MAAA;IAAjDC,QAAQ,EAAED,MAAA,CAAAE,kBAAkB;IAAGC,MAAM,EAAEH,MAAA,CAAAG","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}